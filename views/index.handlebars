<center>
  <img src="https://media.giphy.com/media/IgOEWPOgK6uVa/giphy.gif" alt="" style="max-width: 400px" />
<div id ="headerSection">
  <h1>Eat Da Burger</h1>
</div>
</center>

<div id='avail'>
    <h3>Available Burgers:</h3>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Devour it!</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<div id='devoured'>
    <h3>Devoured Burgers: </h3>

    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id='add'>
    <h3>Add a Burger: </h3>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
            <button class="btn btn-warning" type="submit">Add Burger</button>
        </div>
    </form>
</div>