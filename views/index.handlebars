<h1 class="text-center">Eat-Da-Burger!</h1>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <div class="content-burger_list" id={{this.id}},>
        <pre> {{this.id}}. {{this.burger_name}} </pre>
        <form method="POST" action="/burgers/update?_method=put" class="button-size">
          <input type="hidden" name="burger_id" type="text" value={{this.id}}>
          <br>
          <button type="submit" class="btn btn-defult"> DEVOUR IT</button>
        </form>

      </div>
  {{/unless}}
  {{/each}}
</ul>

<h2 class="text-center ml-5">Burger's You've Eaten</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <div class="content-burger_list" id={{this.id}}>
          <pre> {{this.id}}. {{this.burger_name}} </pre>
          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" type="text" placeholder="{{this.id}}. {{this.burger_name}}">
            <br>
            <button class="deleteBurger" type="click">Digest Burger</button>
          </form>
        </div>
  {{/if}}
  {{/each}}
</ul>


<div class="card-body ml-5">
  <div class="card text-center">
    <h2 class="card-title">Add A Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label class="font-weight-bold" for="burger">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
  </div>
</div>